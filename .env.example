# Runtime
PORT=8080
NOTIFY_TIMEZONE=UTC

# Auth
NOTIFY_GATEWAY_TOKEN=replace-with-a-strong-token
ALERTMANAGER_WEBHOOK_TOKEN=replace-with-another-strong-token

# Routing defaults (fallback when SOURCE_ROUTE_JSON has no match)
ENABLED_CHANNELS=tg,wecom,serverchan
ROUTE_CRITICAL=tg,wecom
ROUTE_WARNING=tg,wecom
ROUTE_INFO=tg,wecom

# Reliability
DEDUPE_WINDOW_MS=45000
RETRY_SCHEDULE_MS=1000,2000,4000

# Optional source-specific tag routing
# SOURCE_ROUTE_JSON={\"oraclemev\":{\"critical\":[\"tg.oracle\",\"wecom.oracle\"],\"warning\":[\"wecom.oracle\"],\"info\":[\"tg.oracle\"]}}
SOURCE_ROUTE_JSON=

# Optional channel -> tag mapping
# CHANNEL_TAG_MAP_JSON={\"tg\":[\"tg.default\"],\"wecom\":[\"wecom.default\"],\"serverchan\":[\"serverchan.default\"]}
CHANNEL_TAG_MAP_JSON=

# Apprise config choices
# 1) APPRISE_CONFIG_YAML_B64 (recommended for many targets/tags)
APPRISE_CONFIG_YAML_B64=

# 2) APPRISE_URLS_JSON (simple list), example:
# APPRISE_URLS_JSON=[{\"url\":\"tgram://<bot-token>/<chat-id>\",\"tags\":[\"tg.default\"]},{\"url\":\"https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx\",\"tags\":[\"wecom.default\"]}]
APPRISE_URLS_JSON=

# 3) Legacy single-channel credentials (kept for compatibility)
TG_BOT_TOKEN=
TG_CHAT_ID=
WECOM_WEBHOOK_URL=
SERVERCHAN_SENDKEY=
